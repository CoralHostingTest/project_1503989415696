{
    "swagger": "2.0",
    "info": {
        "title": "The Lock API",
        "version": "1"
    },
    "basePath": "/api/mobilePayment/v1",
    "schemes": [],
    "paths": {
        "/locks": {
            "delete": {
                "tags": [
                    "MpNullResult"
                ],
                "summary": "The API to delete all locks for qa testing",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "policy",
                        "in": "query",
                        "schema": {
                            "$ref": "#/definitions/MpLockPolicy"
                        },
                        "required": true
                    },
                    {
                        "name": "duration",
                        "in": "query",
                        "schema": {
                            "$ref": "#/definitions/MpLockDuration"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "No Content"
                    },
                    "400": {
                        "description": "Bad Request - The user given wrong format of lock.",
                        "schema": {
                            "$ref": "#/definitions/ParsecResourceError"
                        }
                    },
                    "401": {
                        "description": "Unauthorized - The user not login.",
                        "schema": {
                            "$ref": "#/definitions/ParsecResourceError"
                        }
                    },
                    "403": {
                        "description": "Forbidden - Invalid wssid or user not in whitelist.",
                        "schema": {
                            "$ref": "#/definitions/ParsecResourceError"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error - The system have error.",
                        "schema": {
                            "$ref": "#/definitions/ParsecResourceError"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "MpCheckResult": {
            "properties": {
                "isValid": {
                    "type": "boolean",
                    "description": "True if credit card number or passcode is valid, false if not.",
                    "example": false
                }
            },
            "required": [
                "isValid"
            ],
            "description": "The object is for creditCardAuth \u0026 passCode check result"
        },
        "MpLockDuration": {
            "type": "string",
            "enum": [
                "DURATION_10_MINS",
                "DURATION_1_HOURS",
                "DURATION_24_HOURS"
            ]
        },
        "MpLockPolicy": {
            "type": "string",
            "enum": [
                "REQUEST_TOKEN",
                "RESET_BY_PASSCODE",
                "RESET_BY_CARD_NUMBER",
                "VERIFY_CREDIT_CARD",
                "CHECK_PASSCODE"
            ]
        },
        "MpNullResult": {
            "description": "The object is just for no content"
        },
        "ParsecErrorBody": {
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32"
                },
                "detail": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ParsecErrorDetail"
                    }
                },
                "message": {
                    "type": "string"
                }
            },
            "required": [
                "message"
            ]
        },
        "ParsecErrorDetail": {
            "properties": {
                "invalidValue": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                }
            },
            "required": [
                "message"
            ]
        },
        "ParsecResourceError": {
            "properties": {
                "error": {
                    "$ref": "#/definitions/ParsecErrorBody"
                }
            },
            "required": [
                "error"
            ]
        },
        "ResourceError": {
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32"
                },
                "message": {
                    "type": "string"
                }
            },
            "required": [
                "code",
                "message"
            ]
        }
    }
}
