{
    "swagger": "2.0",
    "info": {
        "title": "The Passcode API",
        "version": "1"
    },
    "basePath": "/api/mobilePayment/v1",
    "schemes": [],
    "paths": {
        "/passcodes": {
            "delete": {
                "tags": [
                    "MpNullResult"
                ],
                "summary": "Check the user and its passcode.",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "204": {
                        "description": "No Content"
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/ParsecResourceError"
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "$ref": "#/definitions/ParsecResourceError"
                        }
                    },
                    "403": {
                        "description": "Forbidden",
                        "schema": {
                            "$ref": "#/definitions/ParsecResourceError"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/ParsecResourceError"
                        }
                    }
                }
            },
            "get": {
                "tags": [
                    "MpNullResult"
                ],
                "summary": "Check the user have set passcode or not.",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "204": {
                        "description": "No Content"
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/ParsecResourceError"
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "$ref": "#/definitions/ParsecResourceError"
                        }
                    },
                    "403": {
                        "description": "Forbidden",
                        "schema": {
                            "$ref": "#/definitions/ParsecResourceError"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/ParsecResourceError"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/ParsecResourceError"
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "MpNullResult"
                ],
                "summary": "The API give user setup 1st passcode",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "passcode",
                        "in": "body",
                        "schema": {
                            "$ref": "#/definitions/MpPasscode"
                        },
                        "description": "user enter the passcode",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "No Content"
                    },
                    "400": {
                        "description": "Bad Request - The user given wrong format of passcode or passcode have already setup.",
                        "schema": {
                            "$ref": "#/definitions/ParsecResourceError"
                        }
                    },
                    "401": {
                        "description": "Unauthorized - The user not login.",
                        "schema": {
                            "$ref": "#/definitions/ParsecResourceError"
                        }
                    },
                    "403": {
                        "description": "Forbidden",
                        "schema": {
                            "$ref": "#/definitions/ParsecResourceError"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error - The system have error.",
                        "schema": {
                            "$ref": "#/definitions/ParsecResourceError"
                        }
                    }
                }
            },
            "put": {
                "tags": [
                    "MpNullResult"
                ],
                "summary": "Reset passcode by given old passcode or authorized card number",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "resetData",
                        "in": "body",
                        "schema": {
                            "$ref": "#/definitions/MpResetData"
                        },
                        "description": "Reset data user given.",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "No Content"
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/ParsecResourceError"
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "$ref": "#/definitions/ParsecResourceError"
                        }
                    },
                    "403": {
                        "description": "Forbidden",
                        "schema": {
                            "$ref": "#/definitions/ParsecResourceError"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/ParsecResourceError"
                        }
                    }
                }
            }
        },
        "/passcodes/check": {
            "post": {
                "tags": [
                    "MpCheckResult"
                ],
                "summary": "Given passcode to check match user's passcode or not",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "passcode",
                        "in": "body",
                        "schema": {
                            "$ref": "#/definitions/MpPasscode"
                        },
                        "description": "The passcode user given",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/MpCheckResult"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/ParsecResourceError"
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "$ref": "#/definitions/ParsecResourceError"
                        }
                    },
                    "403": {
                        "description": "Forbidden",
                        "schema": {
                            "$ref": "#/definitions/ParsecResourceError"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/ParsecResourceError"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "MpCheckResult": {
            "properties": {
                "isValid": {
                    "type": "boolean",
                    "description": "True if credit card number or passcode is valid, false if not.",
                    "example": false
                }
            },
            "required": [
                "isValid"
            ],
            "description": "The object is for creditCardAuth \u0026 passCode check result"
        },
        "MpNullResult": {
            "description": "The object is just for no content"
        },
        "MpPasscode": {
            "properties": {
                "passcode": {
                    "type": "string",
                    "description": "passcode string.",
                    "example": ""
                }
            },
            "required": [
                "passcode"
            ],
            "description": "passcode"
        },
        "MpResetData": {
            "properties": {
                "cardNumber": {
                    "type": "string",
                    "description": "required if ResetType is BY_CARD_NUMBER.",
                    "example": ""
                },
                "newPasscode": {
                    "type": "string",
                    "description": "The new passcode for reset.",
                    "example": ""
                },
                "oldPasscode": {
                    "type": "string",
                    "description": "required if ResetType is BY_PASSCODE.",
                    "example": ""
                },
                "resetType": {
                    "description": "indicate reset by \"old passcode\" or \"card number\".",
                    "$ref": "#/definitions/MpResetType"
                }
            },
            "required": [
                "resetType",
                "cardNumber",
                "oldPasscode",
                "newPasscode"
            ],
            "description": "The reset data for passcode."
        },
        "MpResetType": {
            "type": "string",
            "enum": [
                "BY_PASSCODE",
                "BY_CARD_NUMBER"
            ]
        },
        "ParsecErrorBody": {
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32"
                },
                "detail": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ParsecErrorDetail"
                    }
                },
                "message": {
                    "type": "string"
                }
            },
            "required": [
                "message"
            ]
        },
        "ParsecErrorDetail": {
            "properties": {
                "invalidValue": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                }
            },
            "required": [
                "message"
            ]
        },
        "ParsecResourceError": {
            "properties": {
                "error": {
                    "$ref": "#/definitions/ParsecErrorBody"
                }
            },
            "required": [
                "error"
            ]
        },
        "ResourceError": {
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32"
                },
                "message": {
                    "type": "string"
                }
            },
            "required": [
                "code",
                "message"
            ]
        }
    }
}
